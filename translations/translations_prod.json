    "energy":{
        "GET" : {
            "apiPrefix":"get",
            "baseURL":"https://energyinschools.co.uk/api/v1/micro-bit/energy/consumption/?",
            "microbitQueryString":"/%endpoint%/%unit?%/%location?%/%type?%/%period?%/%amount?%",
            "compulsoryParameters":[
                {
                    "name":"endpoint",
                    "type":"string"
                }
            ],
            "endpoint":{
                "energyLevel":{
                    "jspath": ".unit",
                    "returns":[
                        {
                            "type":"string",
                            "name":"status"
                        }
                    ]
                }
            }
        }
    },
    "energyMeter":{
        "POST" : {
            "apiPrefix":"send",
            "baseURL":"https://energyinschools.co.uk/api/v1/micro-bit/historical-data/",
            "microbitQueryString":"/%endpoint%",
            "queryObject":{
                "namespace":"energy",
                "name":"%name%",
                "value":"%value%",
                "type":"%type%",
                "unit":"watt"
            },
            "headers":{
                "pi-id":"%pi-id%",
                "school-id":"%school-id%"
            },
            "endpoint":{
                "energyLevel":{
                    "queryObject":{
                        "namespace":"energy",
                        "name":"%name%",
                        "value":"%value%",
                        "type":"%type%",
                        "unit":"watt"
                    },
                    "parameters":[
                        {
                            "type":"string",
                            "name":"name"
                        },
                        {
                            "type":"int",
                            "name":"value"
                        },
                        {
                            "type":"int",
                            "name":"type"
                        }
                    ]
                }
            }
        }
    },
    "weather":{
        "POST" : {
            "apiPrefix":"get",
            "baseURL":"https://energyinschools.co.uk/api/v1/micro-bit/weather/",
            "microbitQueryString":""
